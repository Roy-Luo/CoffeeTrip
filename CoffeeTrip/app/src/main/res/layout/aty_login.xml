<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4abdcc"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/login_finish_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/btn_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="LOK'TAR OGAR"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_wechat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/selector_wechat" />

            <View
                android:layout_width="1dp"
                android:layout_height="91dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/login_sina_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/selector_sina" />

            <View
                android:layout_width="1dp"
                android:layout_height="91dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/white" />

            <ImageView
                android:id="@+id/login_qq_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/selector_qq" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_more_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_more"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"
                android:text="更多社交平台"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:text="使用Coffee账户登录"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/login_phone_login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="通过手机号码登录"
            android:textColor="#4abdcc"
            android:textSize="15sp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/login_email_login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_login_two"
            android:gravity="center"
            android:padding="10dp"
            android:text="面包用户名或邮箱登录"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_forget_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/login_sign_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="注册账号"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>

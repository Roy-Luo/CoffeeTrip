<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hunter_content_special_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/imagesix"
        android:scaleType="fitXY"/>
    
    <TextView
        android:id="@+id/hunter_content_special_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="日式小清新体验之旅"
        android:textSize="25sp"
        android:textColor="@color/color_white"/>

    <TextView
        android:id="@+id/hunter_content_special_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="醉日本"
        android:textSize="30sp"
        android:textColor="@color/color_white"
        android:layout_above="@id/hunter_content_special_title"
        android:layout_marginLeft="15dp"/>
    
</RelativeLayout>
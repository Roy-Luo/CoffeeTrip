<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/item_recommend_content_margin"
    >


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_background_sdv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recommend_content_sdv_height"
        android:layout_margin="@dimen/item_recommend_content_margin"
        fresco:actualImageScaleType="fitXY"
        fresco:roundedCornerRadius="@dimen/item_recommend_content_fresco_radius" />

    <TextView
        android:id="@+id/recommend_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_recommend_content_tv_marginLeft"
        android:layout_marginTop="@dimen/item_recommend_content_marginTop"
        android:textColor="@android:color/white"
        android:textSize="@dimen/item_recommend_content_tv_textSize" />

    <ImageView
        android:id="@+id/recommend_best_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/best"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/item_recommend_content_marginTop"
        android:layout_marginRight="@dimen/item_recommend_content_img_marginRight"
        />

    <TextView
        android:id="@+id/recommend_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommend_title_tv"
        android:layout_marginLeft="@dimen/item_recommend_content_tv_marginLeft"
        android:layout_marginTop="@dimen/item_recommend_content_marginTop_tv_sec"
        android:textColor="@color/color_white"
        android:textSize="@dimen/item_recommend_content_tv_textSize_sec"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recommend_icon_sdv"
        android:layout_width="@dimen/item_recommend_content_sdv_wid_hei"
        android:layout_height="@dimen/item_recommend_content_sdv_wid_hei"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/item_recommend_content_sdv_marginBottom"
        android:layout_marginLeft="@dimen/item_recommend_content_sdv_marginLeft"
        fresco:actualImageScaleType="fitXY"
        fresco:roundAsCircle="true" />


</RelativeLayout>
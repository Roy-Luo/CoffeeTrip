<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_customize_head_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:actualImageScaleType="fitXY"
            fresco:roundAsCircle="true"
            android:layout_marginRight="5dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/item_customize_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_customize_head_img"
            android:text="妙途军"
            android:textColor="@color/black_color"
            android:textSize="15sp" />




            <LinearLayout
                android:id="@+id/item_customize_boy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_dark"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/item_customize_name_tv"
                android:visibility="gone"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_boy" />

                <TextView
                    android:id="@+id/item_customize_age_boy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 岁"
                    android:textColor="@color/color_white"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_customize_girl_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ec4a8b"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/item_customize_name_tv"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_girl" />

                <TextView
                    android:id="@+id/item_customize_age_girl_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 岁"
                    android:textColor="@color/color_white"
                    android:textSize="13sp" />


            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_customize_name_tv"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/item_customize_head_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进行中"
                android:textColor="@color/black_color"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4月26日"
                android:textColor="@color/black_color"
                android:textSize="13sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/black_color" />

            <TextView
                android:id="@+id/item_customize_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="961.07"
                android:textColor="@color/black_color"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textColor="@color/black_color"
                android:textSize="13sp" />


        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/item_customize_remark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="#6月25日号出发，求约伴#6月底泰国，俩女生。约伴2男生或者2女生，费用AA。不赶景点，随心走.ps：推荐一款好玩的软件，travelbaby即旅行宝贝，高端旅行约伴软件。"
        android:textColor="@color/black_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发去: "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_customize_destination_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="泰国"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约伴要求: "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_customize_demand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="逗逼 暖男 萝莉 御姐 不限"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用: "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_customize_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线下AA"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- 图片 -->
    <com.roy.coffeetrip.utill.MyGridView
        android:id="@+id/item_customize_pic_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.3"
        android:background="@android:color/darker_gray" />

    <!-- 点赞 评论 入伙-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/icon_together_like" />

            <TextView
                android:id="@+id/item_customize_like_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textColor="@color/black_color"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:alpha="0.3"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@mipmap/icon_together_comment" />

            <TextView
                android:id="@+id/item_customize_reply_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textColor="@color/black_color"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:alpha="0.3"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="入伙"
                android:textColor="@color/black_color"
                android:textSize="15sp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
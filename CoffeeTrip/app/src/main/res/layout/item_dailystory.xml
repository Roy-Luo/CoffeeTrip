<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/recommend_line_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/recommendline"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/recommend_story_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日精选故事"
            android:layout_toRightOf="@id/recommend_line_iv"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/recommend_all_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/recommendall"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/recommend_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/recommend_all_iv"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>